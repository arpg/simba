<robot name="Robot" type="Compound">
  <!--We do this so that we don't have five instances of a filepath to modify -->
  <media_dir>
    "/Users/luma/Code/RobotGroup/simba/media"
  </media_dir>
  
    <bodybase name="Chassis" dir="/Users/luma/Code/RobotGroup/simba/media" mass="1000"  pose="0,0,0,0,0,1.5707" dimesion="1,1,3" scale="100"  type="Box"/>
    <body name="FRWheel" dir="/Users/luma/Code/RobotGroup/simba/media"  mass="10"  pose="2.5,0,-2,0,1.5707,0"  dimesion="1,2"  scale="25" type="Cylinder"/>
    <body name="FLWheel" dir="/Users/luma/Code/RobotGroup/simba/media" mass="10"  pose="-2.5,0,-2,0,-1.5707,0"  dimesion="1,2" scale="25" type="Cylinder"/>
    <body name="BRWheel" dir="/Users/luma/Code/RobotGroup/simba/media" mass="10"  pose="2.5,0,2.8,0,1.5707,0"  dimesion="1,2" scale="25" type="Cylinder"/>
    <body name="BLWheel" dir="/Users/luma/Code/RobotGroup/simba/media" mass="10"  pose="-2.5,0,2.8,0,-1.5707,0"  dimesion="1,2" scale="25" type="Cylinder"/>
    <body name="Stick" dir="/Users/luma/Code/RobotGroup/simba/media" mass="10"  pose="0,-3,0,0,0,0"  dimesion="0.1,2,0.1" scale="25" type="Box"/>
    
    <joint name="FLAxleJoint" type="Hinge2Joint">
        <parent body="Chassis"/>
        <child body="FLWheel"/>
        <axis axis1="0, 1, 0" axis2 ="1, 0, 0"/>
        <anchor setting ="-2.5,2,-2"/>
        <limit lowerlinear="0,0,0" upperlinear="0,0.2,0" lowerangle = "-3.14,-0.5,0" upperangle="3.14,0.5,0"/>
    </joint>


    <joint name="FRAxleJoint" type="Hinge2Joint">
        <parent body="Chassis"/>
        <child body="FRWheel"/>
        <axis axis1="0, 1, 0" axis2 ="1, 0, 0"/>
        <anchor setting ="2.5,2,-2"/>
        <limit lowerlinear="0,0,0" upperlinear="0,0.2,0" lowerangle = "-3.14,-0.5,0" upperangle="3.14,0.5,0"/>
    </joint>


